<?xml version = "1.0" encoding = "utf-8" ?>
<ScrollView
	xmlns:android = "http://schemas.android.com/apk/res/android"
	android:orientation = "vertical"
	android:layout_width = "fill_parent"
	android:layout_height = "fill_parent"
	android:padding = "10dp"
	android:background = "#F0F0F0">
	<LinearLayout
		android:layout_width = "fill_parent"
		android:layout_height = "wrap_content"
		android:orientation = "vertical">
		<TextView
			style = "@style/title_style"
			android:background = "@drawable/title"
			android:text = "@string/application_name" />
		<TextView
			android:id = "@+id/label1"
			style = "@style/label_style"
			android:layout_width = "fill_parent"
			android:layout_height = "wrap_content"
			android:text = "@string/label1" />
		<LinearLayout
			android:layout_width = "fill_parent"
			android:layout_height = "wrap_content"
			android:orientation = "horizontal">
			<TextView
				android:id = "@+id/current_day_calories"
				style = "@style/label_style"
				android:layout_width = "wrap_content"
				android:layout_height = "wrap_content"
				android:textStyle = "bold"
				android:textColor = "#00c000"
				android:text = "@string/zero" />
			<TextView
				android:id = "@+id/current_day_calories_unit"
				style = "@style/label_style"
				android:layout_width = "wrap_content"
				android:layout_height = "wrap_content"
				android:textStyle = "bold"
				android:textColor = "#00c000"
				android:text = "@string/kcal" />
			<TextView
				style = "@style/label_style"
				android:layout_width = "wrap_content"
				android:layout_height = "wrap_content"
				android:text = "@string/label2" />
		</LinearLayout>
		<LinearLayout
			android:layout_width = "fill_parent"
			android:layout_height = "wrap_content"
			android:orientation = "horizontal">
			<TextView
				android:id = "@+id/maximum_calories"
				style = "@style/label_style"
				android:layout_width = "wrap_content"
				android:layout_height = "wrap_content"
				android:textStyle = "bold"
				android:text = "@string/zero" />
			<TextView
				style = "@style/label_style"
				android:layout_width = "wrap_content"
				android:layout_height = "wrap_content"
				android:textStyle = "bold"
				android:text = "@string/kcal" />
			<TextView
				style = "@style/label_style"
				android:layout_width = "wrap_content"
				android:layout_height = "wrap_content"
				android:text = "@string/dot" />
		</LinearLayout>
		<LinearLayout
			android:layout_width = "fill_parent"
			android:layout_height = "wrap_content"
			android:orientation = "horizontal">
			<TextView
				android:id = "@+id/label3"
				style = "@style/label_style"
				android:layout_width = "wrap_content"
				android:layout_height = "wrap_content"
				android:text = "@string/label3" />
			<TextView
				android:id = "@+id/label4"
				style = "@style/label_style"
				android:layout_width = "wrap_content"
				android:layout_height = "wrap_content"
				android:text = "@string/label4"
				android:visibility = "gone" />
		</LinearLayout>
		<LinearLayout
			android:layout_width = "fill_parent"
			android:layout_height = "wrap_content"
			android:orientation = "horizontal">
			<TextView
				android:id = "@+id/remaining_calories"
				style = "@style/label_style"
				android:layout_width = "wrap_content"
				android:layout_height = "wrap_content"
				android:textStyle = "bold"
				android:textColor = "#00c000"
				android:text = "@string/zero" />
			<TextView
				android:id = "@+id/remaining_calories_unit"
				style = "@style/label_style"
				android:layout_width = "wrap_content"
				android:layout_height = "wrap_content"
				android:textStyle = "bold"
				android:textColor = "#00c000"
				android:text = "@string/kcal" />
			<TextView
				style = "@style/label_style"
				android:layout_width = "wrap_content"
				android:layout_height = "wrap_content"
				android:text = "@string/dot" />
		</LinearLayout>
		<TextView
			style = "@style/label_style"
			android:layout_width = "fill_parent"
			android:layout_height = "wrap_content"
			android:layout_marginTop = "25dp"
			android:text = "@string/label5" />
		<TextView
			style = "@style/label_style"
			android:layout_width = "fill_parent"
			android:layout_height = "wrap_content"
			android:text = "@string/label6" />
		<LinearLayout
			android:layout_width = "fill_parent"
			android:layout_height = "wrap_content"
			android:orientation = "horizontal">
			<EditText
				android:id = "@+id/weight_edit"
				style = "@style/label_style"
				android:layout_width = "100dp"
				android:layout_height = "wrap_content"
				android:lines = "1"
				android:inputType = "phone"
				android:digits = "0123456789." />
			<TextView
				style = "@style/label_style"
				android:layout_width = "wrap_content"
				android:layout_height = "wrap_content"
				android:text = "@string/label7" />
			<TextView
				style = "@style/label_style"
				android:layout_width = "wrap_content"
				android:layout_height = "wrap_content"
				android:text = "@string/dot" />
		</LinearLayout>
		<TextView
			style = "@style/label_style"
			android:layout_width = "fill_parent"
			android:layout_height = "wrap_content"
			android:text = "@string/label8" />
		<LinearLayout
			android:layout_width = "fill_parent"
			android:layout_height = "wrap_content"
			android:orientation = "horizontal">
			<EditText
				android:id = "@+id/calories_edit"
				style = "@style/label_style"
				android:layout_width = "100dp"
				android:layout_height = "wrap_content"
				android:lines = "1"
				android:inputType = "phone"
				android:digits = "0123456789." />
			<TextView
				style = "@style/label_style"
				android:layout_width = "wrap_content"
				android:layout_height = "wrap_content"
				android:text = "@string/kcal" />
			<TextView
				style = "@style/label_style"
				android:layout_width = "wrap_content"
				android:layout_height = "wrap_content"
				android:text = "@string/dot" />
		</LinearLayout>
		<LinearLayout
			android:layout_width = "fill_parent"
			android:layout_height = "wrap_content"
			android:layout_marginTop = "25dp"
			android:orientation = "horizontal">
			<ImageButton
				style = "@style/button_style"
				android:layout_width = "0dp"
				android:layout_weight = "1"
				android:background = "@drawable/green_button"
				android:src = "@drawable/add"
				android:contentDescription = "@string/add_button"
				android:onClick = "addData" />
			<ImageButton
				android:id = "@+id/cancel_button"
				style = "@style/button_style"
				android:layout_width = "0dp"
				android:layout_weight = "1"
				android:background = "@drawable/blue_button"
				android:src = "@drawable/cancel"
				android:contentDescription = "@string/cancel_button"
				android:onClick = "undoTheLast" />
		</LinearLayout>
		<LinearLayout
			android:layout_width = "fill_parent"
			android:layout_height = "wrap_content"
			android:orientation = "horizontal">
			<ImageButton
				style = "@style/button_style"
				android:layout_width = "0dp"
				android:layout_weight = "1"
				android:background = "@drawable/black_button"
				android:src = "@drawable/history"
				android:contentDescription = "@string/history_button"
				android:onClick = "showHistory" />
			<ImageButton
				style = "@style/button_style"
				android:layout_width = "0dp"
				android:layout_weight = "1"
				android:background = "@drawable/black_button"
				android:src = "@drawable/settings"
				android:contentDescription = "@string/settings_button"
				android:onClick = "showSettings" />
			<ImageButton
				style = "@style/button_style"
				android:layout_width = "0dp"
				android:layout_weight = "1"
				android:background = "@drawable/black_button"
				android:src = "@drawable/about"
				android:contentDescription = "@string/about_button"
				android:onClick = "showAbout" />
		</LinearLayout>
	</LinearLayout>
</ScrollView>

