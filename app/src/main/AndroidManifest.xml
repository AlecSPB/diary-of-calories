<?xml version="1.0" encoding="utf-8"?>
<manifest
	xmlns:android = "http://schemas.android.com/apk/res/android"
	package = "com.thewizardplusplus.diaryofcalories"
	android:versionCode = "5"
	android:versionName = "1.3">

	<uses-sdk
		android:minSdkVersion = "14"
		android:targetSdkVersion = "21" />
	<uses-permission
		android:name = "android.permission.WRITE_EXTERNAL_STORAGE" />

	<application
		android:icon = "@drawable/icon"
		android:label = "@string/application_name"
		android:theme = "@style/application_theme"
		android:allowBackup = "true">
		<activity
			android:label = "@string/application_name"
			android:name = ".MainActivity">
			<intent-filter>
				<action android:name = "android.intent.action.MAIN" />
				<category android:name = "android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity
			android:label = "@string/history_activity_name"
			android:name = ".HistoryActivity">
			<meta-data
				android:name = "android.support.PARENT_ACTIVITY"
				android:value = "com.thewizard.diaryofcalories.MainActivity" />
		</activity>
		<activity
			android:label = "@string/settings_activity_name"
			android:name = ".SettingsActivity">
			<meta-data
				android:name = "android.support.PARENT_ACTIVITY"
				android:value = "com.thewizard.diaryofcalories.MainActivity" />
		</activity>
		<activity
			android:label = "@string/about_activity_name"
			android:name = ".AboutActivity">
			<meta-data
				android:name = "android.support.PARENT_ACTIVITY"
				android:value = "com.thewizard.diaryofcalories.MainActivity" />
		</activity>

		<receiver
			android:name = "Widget"
			android:exported = "false">
			<intent-filter>
				<action
					android:name = "android.appwidget.action.APPWIDGET_UPDATE" />
			</intent-filter>
			<meta-data
				android:name = "android.appwidget.provider"
				android:resource = "@xml/widget_info" />
		</receiver>
		<receiver android:name = "WidgetUpdateAlarm"></receiver>
	</application>
</manifest>
